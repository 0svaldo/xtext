<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

<extension
         point="org.eclipse.ui.editors">
      <editor
            class="guice.Aware:org.eclipse.xtext.ui.core.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="fowlerdsl"
            id="org.eclipse.xtext.example.FowlerDsl"
            name="FowlerDsl Editor">
      </editor>
   </extension>
 <extension
         point="org.eclipse.ui.preferencePages">
		<page
			class="guice.Aware:org.eclipse.xtext.ui.core.editor.preferences.LanguageRootPreferencePage"
			id="org.eclipse.xtext.example.FowlerDsl"
			name="FowlerDsl">
			<keywordReference
				id="org.eclipse.xtext.example.ui.keyword_FowlerDsl">
			</keywordReference>
		</page>
		<page
		    category="org.eclipse.xtext.example.FowlerDsl"
		    class="guice.Aware:org.eclipse.xtext.ui.core.editor.preferences.EditorPreferencePage"
		    id="org.eclipse.xtext.example.FowlerDsl.editor"
		    name="Editor">
		    	<keywordReference 
           			id="org.eclipse.xtext.keyword.editor">
     			</keywordReference>
		</page>
      </extension>
	<extension
		point="org.eclipse.ui.keywords">
		<keyword
			id="org.eclipse.xtext.example.ui.keyword_FowlerDsl"
			label="FowlerDsl">
		</keyword>
		<keyword
            id="org.eclipse.xtext.example.FowlerDsl.tasktags"
            label="Task Tags">
        </keyword>
	</extension>
	
	
	<extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="guice.Aware:org.eclipse.xtext.resource.XtextResourceFactory"
            type="fowlerdsl">
      </parser>
   </extension>
	

</plugin>
