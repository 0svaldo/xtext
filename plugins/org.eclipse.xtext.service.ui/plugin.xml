<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="scope" name="Service Scope" schema="schema/scope.exsd"/>
   <extension-point id="serviceRegistrationFactory" name="Service Registration Factory" schema="schema/serviceRegistrationFactory.exsd"/>
 <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipse.xtext.service.ui.view.ServiceRegistryView"
            id="org.eclipse.xtext.ui.core.views.ServiceRegistryView"
            name="%ServiceRegistryView.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.xtext.ui.core.views.ServiceRegistryView">
         <command
               commandId="org.eclipse.xtext.ui.core.serviceregistry.linkWithEditor"
               disabledIcon="icons/dlcl16/synced.gif"
               icon="icons/elcl16/synced.gif"
               style="toggle">
         </command>
         <command
               commandId="org.eclipse.xtext.ui.core.serviceregistry.showScopes"
               icon="icons/elcl16/all_instances.gif"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.xtext.ui.core.views.ServiceRegistryView">
         <command
               commandId="org.eclipse.xtext.ui.core.serviceregistry.showFQNames"
               style="toggle">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.xtext.ui.core.views.registry"
            name="%ServiceRegistryView.category.name">
      </category>
      <command
            categoryId="org.eclipse.xtext.ui.core.views.registry"
            defaultHandler="org.eclipse.xtext.service.ui.view.handler.ShowFQNamesHandler"
            id="org.eclipse.xtext.ui.core.serviceregistry.showFQNames"
            name="%ServiceRegistryView.ShowFQNames.name">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="STYLE">
         </state>
      </command>
      <command
            categoryId="org.eclipse.xtext.ui.core.views.registry"
            defaultHandler="org.eclipse.xtext.service.ui.view.handler.LinkWithEditorHandler"
            id="org.eclipse.xtext.ui.core.serviceregistry.linkWithEditor"
            name="%ServiceRegistryView.LinkWithEditor.name">
      </command>
      <command
            categoryId="org.eclipse.xtext.ui.core.views.registry"
            defaultHandler="org.eclipse.xtext.service.ui.view.handler.ShowAllScopesHandler"
            id="org.eclipse.xtext.ui.core.serviceregistry.showScopes"
            name="%ServiceRegistryView.ShowScopes.name">
      </command>
   </extension>
   
</plugin>
