<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.xtext</groupId>
	<artifactId>org.eclipse.xtext.xtend2.standalone</artifactId>
	<version>2.2.0-SNAPSHOT</version>
	<name>Xtext Standalone Compiler</name>
	<properties>
		<eclipse.xtext.version>[2.1.0,3.0.0)</eclipse.xtext.version>
        <eclipse.emf.version>[2.5.0,3.0.0)</eclipse.emf.version>
        <eclipse.emf.codegen.version>2.2.3</eclipse.emf.codegen.version>
        <eclipse.jdt.core.version>3.8.0.v_C03</eclipse.jdt.core.version>
		<google.inject.version>[2.0.0,3.0.0)</google.inject.version>
		<google.collect.version>[1.0.0,2.0.0)</google.collect.version>
	</properties>
	<build>
		<sourceDirectory>src</sourceDirectory>
	</build>
	<repositories>
		<repository>
			<id>eclipse.xtext.proxy</id>
			<name>Xtext Release Repository</name>
			<url>http://maven.eclipse.org/nexus/content/repositories/xtext-proxy/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>org.eclipse.emf</groupId>
			<artifactId>org.eclipse.emf.ecore</artifactId>
			<version>${eclipse.emf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.emf</groupId>
			<artifactId>codegen</artifactId>
			<version>${eclipse.emf.codegen.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.xtend2</artifactId>
			<version>${eclipse.xtext.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext</artifactId>
			<version>${eclipse.xtext.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.xbase</artifactId>
			<version>${eclipse.xtext.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.xbase.lib</artifactId>
			<version>${eclipse.xtext.version}</version>
            <scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.xtend2.lib</artifactId>
			<version>${eclipse.xtext.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.common.types</artifactId>
			<version>${eclipse.xtext.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.util</artifactId>
			<version>${eclipse.xtext.version}</version>
		</dependency>
		<dependency>
			<groupId>com.google.inject</groupId>
			<artifactId>com.google.inject</artifactId>
			<version>${google.inject.version}</version>
		</dependency>
		<dependency>
			<groupId>com.google.collect</groupId>
			<artifactId>com.google.collect</artifactId>
			<version>${google.collect.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>org.eclipse.jdt.core</artifactId>
			<version>${eclipse.jdt.core.version}</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.15</version>
			<exclusions>
				<exclusion>
					<groupId>javax.mail</groupId>
					<artifactId>mail</artifactId>
				</exclusion>
				<exclusion>
					<groupId>javax.jms</groupId>
					<artifactId>jms</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.sun.jdmk</groupId>
					<artifactId>jmxtools</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.sun.jmx</groupId>
					<artifactId>jmxri</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>
